<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
  <ImageView
      android:layout_width="200dp"
      android:layout_height="200dp"
      android:id="@+viewPicture/imageView"/>

  <TextView
      android:id="@+viewPicture/time"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      />

  <TextView
      android:id="@+viewPicture/ratingLabel"
      android:visibility="invisible"
      android:text="You were eating because:"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      />

  <TextView
      android:id="@+viewPicture/rating"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:textStyle="bold"
      />

  <Button
    android:id="@+viewPicture/delete"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:text="Delete Picture"
    />

</LinearLayout>